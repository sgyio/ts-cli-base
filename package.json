{
  "name": "@sgy/ts-cli-base",
  "version": "0.1.0",
  "description": "Typescript Example CLI with yargs",
  "main": "index.js",
  "bin": {
    "ecli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --sourceMap false",
    "build:watch": "tsc --watch",
    "start": "tsc && node ./dist/index.js",
    "test": "jest"
  },
  "author": {
    "name": "sgyio",
    "email": "sgy@sgy.io",
    "url": "https://github.com/sgyio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgyio/ts-cli-base"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "inversify": "^4.13.0",
    "reflect-metadata": "^0.1.13",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.17.14",
    "@types/yargs": "^12.0.16",
    "ajv": "^6.9.1",
    "ajv-keywords": "^3.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "jest": "^24.1.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
