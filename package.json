{
  "name": "@sgy/example-cli",
  "version": "0.1.0",
  "description": "Typescript Example CLI with yargs",
  "main": "index.js",
  "bin": {
    "ecli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --sourceMap false",
    "build:watch": "tsc --watch",
    "start": "tsc && node ./dist/index.js",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "firebase-admin": "^6.0.0",
    "inversify": "^4.13.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.12",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "@types/yargs": "^12.0.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
