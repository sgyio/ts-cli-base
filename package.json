{
  "name": "@sgy/ts-cli-base",
  "version": "0.1.0",
  "private": true,
  "description": "Typescript Example CLI with yargs",
  "main": "index.js",
  "bin": {
    "ecli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --sourceMap false",
    "build:watch": "tsc --watch",
    "start": "tsc && node ./dist/index.js",
    "test": "jest"
  },
  "author": {
    "name": "sgyio",
    "email": "sgy@sgy.io",
    "url": "https://github.com/sgyio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgyio/ts-cli-base"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "inversify": "^4.13.0",
    "reflect-metadata": "^0.1.12",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "@types/yargs": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "ajv": "^6.9.1",
    "ajv-keywords": "^3.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.1",
    "jest": "^24.1.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
